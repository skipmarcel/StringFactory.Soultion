@{
  Layout = "_Layout";
}

@using Factory.Models;

<div>
<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>There are no engineers on your list</h3>
} 
else
{
  <ul>
    @foreach (Engineer engineer in Model)
    {
     <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
    }
  </ul>  
}

<p>@Html.ActionLink("Add new Engineer", "Create")</p>
<p>@Html.ActionLink("Home - Engineer and Machine List", "Index", "Home")</p>

</div>
