@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div>

<h4>Edit this machine: @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.LabelFor(model => model.MachineDescription)
    @Html.EditorFor(model => model.MachineDescription)

    @Html.LabelFor(model => model.MachineName)
    @Html.EditorFor(model => model.MachineName)

    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Assign Engineer to Machine", "AddEngineer", new { id = Model.MachineId })</p>
</div>
