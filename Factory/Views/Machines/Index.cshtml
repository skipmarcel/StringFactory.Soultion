@{
  Layout = "_Layout";
}

@using Factory.Models;

<div>
    <h1>Machines</h1>

    @if (@Model.Count == 0)
    {
        <h3>There are no machines on your roster</h3>
    }
    else
    {
        <ul>
            @foreach (Machine machine in Model)
            {
                <li>
                    @Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })
                </li>
            }
        </ul>
    }

    <p>@Html.ActionLink("Add new machine", "Create")</p>
    <p>@Html.ActionLink("View All Machines", "Create")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
    <p>@Html.ActionLink("View All Engineers and Machines", "Index", "Home")</p>
</div>
