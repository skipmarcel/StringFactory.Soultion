@{
  Layout = "_Layout";
}

@model Factory.Models.Tag

<h2>Add an machine</h2>

<h4>Add a machine to this tag: @Html.DisplayFor(model => model.Title)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TagId)

    @Html.Label("Select machine")
    @Html.DropDownList("MachineId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Add a Machine", "AddMachine", new { id = Model.TagId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>
